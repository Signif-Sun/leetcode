#include <iostream>
#include <string>
#include <stack>

class Solution {
public:
	bool isValid(string s) {
		stack<char> paren;
		for (char& c : s) {
			switch (c)
			{
			case '[':
			case '(':
			case '{':paren.push(c);break;
			case ']':
				if (paren.empty() || paren.top() != '[') {
					return false;
				}
				else {
					paren.pop();
					break;
				}
					

			case ')':
				if (paren.empty() || paren.top() != '(') {
					return false;
					
				}
				else {
					paren.pop();
					break;
				}

			case '}':
				if (paren.empty() || paren.top() != '{') {
					return false;
				}
				else {
					paren.pop();
					break;
				}

			default:
				break;
			}
		}
		return paren.empty();
	}
};
